<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="60dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:fontFamily="@font/aldrich"
                android:shadowColor="@color/TransparentGrey"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="6"
                android:text="@string/gametitle1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="55sp"
                android:textStyle="bold"
                android:typeface="monospace"
                tools:text="@string/gametitle1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="-20dp"
                android:fontFamily="@font/aldrich"
                android:shadowColor="@color/TransparentGrey"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="6"
                android:text="@string/gametitle2"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#2196F3"
                android:textSize="55sp"
                android:textStyle="bold"
                android:typeface="monospace"
                tools:text="@string/gametitle2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="@string/producer"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="monospace" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="206dp"
            android:layout_marginEnd="84dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/figure" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="704dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btnStats"
            android:layout_width="124dp"
            android:layout_height="79dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/statistics"
            android:focusable="auto"
            app:srcCompat="@drawable/ic_stats" />

        <ImageView
            android:id="@+id/btnPlay"
            android:layout_width="124dp"
            android:layout_height="79dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/start"
            app:srcCompat="@drawable/ic_play" />

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="124dp"
            android:layout_height="79dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:contentDescription="@string/preferencer"
            android:focusable="true"
            app:srcCompat="@drawable/ic_settings" />
    </LinearLayout>

    <!-- Layout for content is here. This can be a RelativeLayout  -->

</androidx.constraintlayout.widget.ConstraintLayout>